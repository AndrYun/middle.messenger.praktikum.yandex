<div class="profile-page">
  <nav class="profile-page__sidebar">
    <a href="#" class="profile-page__back">
      <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
        <circle cx="14" cy="14" r="14" fill="#3369F3" />
        <path d="M16 10L12 14L16 18" stroke="white" stroke-width="2" />
      </svg>
    </a>
  </nav>

  <main class="profile-page__content">
    <section class="profile-page__avatar">
      <div class="profile-page__avatar-circle">
        <div data-id="profileAvatar"></div>
        <div class="profile-page__avatar-overlay">
          <span>Поменять<br />аватар</span>
        </div>
      </div>
      <h1 class="profile-page__name">{{data.first_name}}</h1>
    </section>

    <section class="profile-page__fields">
      <div data-id="emailField"></div>
      <div data-id="loginField"></div>
      <div data-id="firstNameField"></div>
      <div data-id="secondNameField"></div>
      <div data-id="displayNameField"></div>
      <div data-id="phoneField"></div>
    </section>

    <nav class="profile-page__actions">
      <div data-id="editLink"></div>
      <div data-id="passwordLink"></div>
      <div data-id="logoutLink"></div>
    </nav>
  </main>

  <div data-id="avatarModal"></div>
</div>