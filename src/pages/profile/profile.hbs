<main class="profile-page">
  <aside class="profile-page__sidebar">
    <a href="#login" class="profile-page__back">
      <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
        <circle cx="14" cy="14" r="14" fill="#3369F3"/>
        <path d="M16 10L12 14L16 18" stroke="white" stroke-width="2"/>
      </svg>
    </a>
  </aside>

  <main class="profile-page__content">
    <div class="profile-page__avatar">
      <div class="profile-page__avatar-circle" id="avatarButton">
        <svg width="40" height="40" viewBox="0 0 40 40" fill="none">
          <rect width="40" height="40" rx="4" fill="#EFEFEF"/>
          <circle cx="20" cy="15" r="6" fill="#CDCDCD"/>
          <path d="M7 35C7 28.9249 11.9249 24 18 24H22C28.0751 24 33 28.9249 33 35V35" fill="#CDCDCD"/>
        </svg>
        <div class="profile-page__avatar-overlay">
          <span>Поменять<br>аватар</span>
        </div>
      </div>
      <span class="profile-page__name">{{name}}</span>
    </div>

    <div class="profile-page__fields">
      {{> profile-field label="Почта" value=email}}
      {{> profile-field label="Логин" value=login}}
      {{> profile-field label="Имя" value=first_name}}
      {{> profile-field label="Фамилия" value=second_name}}
      {{> profile-field label="Имя в чате" value=display_name}}
      {{> profile-field label="Телефон" value=phone}}
    </div>

    <div class="profile-page__actions">
      {{> link text="Изменить данные" href="#profile-edit" variant="primary"}}
      {{> link text="Изменить пароль" href="#profile-password" variant="primary"}}
      {{> link text="Выйти" href="#login" variant="danger"}}
    </div>
  </main>

  <div class="modal" id="avatarModal">
    <div class="modal__overlay"></div>
    <div class="modal__content">
      <h2 class="modal__title">Загрузите файл</h2>
      <div class="modal__body">
        {{> avatar-upload}}
      </div>
    </div>
  </div>
</main>
