<div class='avatar avatar--{{size}}'>
  {{#if src}}
    <img src='{{src}}' alt='{{alt}}' class='avatar__image' />
  {{else}}
    <svg class='avatar__placeholder' viewBox='0 0 40 40' fill='none'>
      <rect width='40' height='40' rx='50%' fill='#EFEFEF' />
      <circle cx='20' cy='15' r='6' fill='#CDCDCD' />
      <path
        d='M7 35C7 28.9249 11.9249 24 18 24H22C28.0751 24 33 28.9249 33 35V35'
        fill='#CDCDCD'
      />
    </svg>
  {{/if}}
</div>